#KeyBoardLayoutButton {
   qproperty-normalPic: url(":/img/keyboard_normal.svg");
   qproperty-pressPic: url(":/img/keyboard_press.svg");
   qproperty-hoverPic: url(":/img/keyboard_hover.svg");
   background-color: transparent;
   border:none;
   margin: 0;
   margin-left: 10px;
   margin-right: 4px;
}

QLineEdit#passwdLineEdit {
    color:white;
    border: none;
    background: transparent;
    selection-color: white;
    selection-background-color: rgba(24,135,239,0.30);
    margin-top: 4px;
}

QFrame#PassWdEditFrame {
    border: none;
    border-radius: 6px;
    background-color:rgba(255, 255, 255, 0.15);
}

QFrame#PassWdEditFrame[alert="true"] {
    border: 1px solid #f9704f;

}

QFrame#PassWdEditFrame QLineEdit {
    padding:0 0 4px 0;
}

QLineEdit#accountEdit {
    color:white;
    border: none;
    background: transparent;
    selection-color: white;
    selection-background-color: rgba(24,135,239,0.30);
    margin-top: 4px;
}

QLineEdit#passwdEdit {
    color:white;
    border: none;
    background: transparent;
    selection-color: white;
    selection-background-color: rgba(24,135,239,0.30);
    margin-top: 4px;
}

QWidget#accountWidget {
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    background-color:rgba(255, 255, 255, 0.15);
}

QWidget#passwdWidget {
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    background-color:rgba(255, 255, 255, 0.15);
}

